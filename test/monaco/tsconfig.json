{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2016",
		"strict": true,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"outDir": "out",
		"sourceMap": true,
		"skipLibCheck": true,
		"declaration": true,
		"lib": [
			"esnext", // for #201187
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"out",
		"tools"
	]
}
